{{!< default}}

  {{#foreach posts}}
  <article class="{{post_class}}">
      <header class="post-header">
          <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
          <section class="post-meta" style="font-size: 0.75rem !important;">
              <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
              {{author}}
              {{tags prefix=" tagged "}}
          </section>
      </header>
      <section class="post-excerpt">
          <p>{{excerpt words="30"}}...<br><a class="read-more" href="{{url}}" style="font-size: 0.75rem !important;"><i>continue reading &raquo;</i></a></p>
      </section>
  </article>
  {{/foreach}}
</div>

{{! Previous/next page links - displayed on every page }}
{{pagination}}
